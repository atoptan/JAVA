import java.util.*;
public class deneme {

	
	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		String kelime="";
		boolean sonuc = true;
		System.out.print("Kelimeyi giriniz:");
		kelime=input.next();
		for(int i=0;i<kelime.length()/2;i++)
		{
			if(kelime.charAt(i)!=kelime.charAt(kelime.length()-i-1))
			{
				sonuc=false;
				break;
			}
			}  //split stringi ayırır
		if(sonuc==false) //trim boşlukları atar
			System.out.print("Kelime palidrom değildir"); //tocharArray stringi char a cevirir
		else
			System.out.print("Kelime palidromdur");
	}

}
